{
  "extends": [
    "last",
    "prettier/flowtype",
    "prettier/react",
    "plugin:react/recommended",
    "plugin:promise/recommended"
  ],
  "plugins": ["react", "promise"],
  "env": {
    "es6": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "pragma": "h"
    }
  },
  "rules": {
    "react/no-unknown-property": [
      2,
      {
        "ignore": ["class"]
      }
    ],
    "react/prop-types": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "none"
      }
    ]
  }
}
